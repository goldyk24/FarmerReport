<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.farmerreport.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp"/>

    <ScrollView android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="685dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <TextView
            android:id="@+id/temp"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ems="10"
            android:text="Temperature" />

        <TextView
            android:id="@+id/temp_val"
            android:layout_width="match_parent"
            android:layout_height="50dp"
             />

        <TextView
            android:id="@+id/soil_moisture"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ems="10"
            android:text="Soil Moisture(pH)" />

        <TextView
            android:id="@+id/soil_moisture_val"
            android:layout_width="match_parent"
            android:layout_height="50dp"
             />

        <TextView
            android:id="@+id/smoke"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ems="10"

            android:text="Smoke" />

        <TextView
            android:id="@+id/smoke_val"
            android:layout_width="match_parent"
            android:layout_height="50dp"
             />

        <TextView
            android:id="@+id/flame"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ems="10"

            android:text="Fire Alert" />

        <TextView
            android:id="@+id/flame_val"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />

        <TextView
            android:id="@+id/water_level"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ems="10"
            android:text="Water Level in Soil" />

        <TextView
            android:id="@+id/water_level_val"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />

        <TextView
            android:id="@+id/rain_water"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ems="10"
            android:text="Rain Alert" />

        <TextView
            android:id="@+id/rain_water_val"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />

        <Button
            android:id="@+id/refresh"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:text="Refresh" />

        <TextView
            android:id="@+id/crop_grow"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Crops That Can Be Grown Are:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/crop"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="18sp"
            android:text="Suitable Crops Are" />


    </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
